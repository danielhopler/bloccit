<h1>New Advertisement</h1>
<div class = "row">
  <div class="col-md-4">

  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class= 'form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter ad title' %>
      </div>
      <div class="form-group">
        <%= f.label :copy %>
        <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter ad copy" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), :step => 1.0, class: 'form_control', placeholder: "Enter ad price $" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
